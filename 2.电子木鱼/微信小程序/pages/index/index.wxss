/* 头部样式 */
.header {
  margin-bottom: 30px;
}

.title {
  display: block;
  font-size: 2.5rem;
  font-weight: 700;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  margin-bottom: 10px;
}

.subtitle {
  display: block;
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

/* 功德计数器 */
.merit-counter {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.merit-label {
  display: block;
  font-size: 1rem;
  color: #666;
  margin-bottom: 5px;
}

.merit-number {
  display: block;
  font-size: 3rem;
  font-weight: 700;
  color: #4a90e2;
  margin-bottom: 5px;
  transition: all 0.3s ease;
}

.merit-unit {
  display: block;
  font-size: 1rem;
  color: #999;
}

/* 木鱼容器 */
.woodfish-container {
  margin-bottom: 30px;
  position: relative;
  overflow: hidden;
}

.woodfish {
  width: 200px;
  height: 200px;
  margin: 0 auto;
  position: relative;
  user-select: none;
}

/* 木鱼身体 */
.woodfish-body {
  width: 150px;
  height: 120px;
  background: linear-gradient(145deg, #8B4513, #A0522D);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  position: relative;
  margin: 0 auto;
  box-shadow: 
    inset 0 10px 20px rgba(0, 0, 0, 0.3),
    0 10px 30px rgba(0, 0, 0, 0.3);
}

.woodfish-top {
  width: 100px;
  height: 20px;
  background: linear-gradient(145deg, #654321, #8B4513);
  border-radius: 50px;
  position: absolute;
  top: -10px;
  left: 25px;
  box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
}

.woodfish-middle {
  width: 80px;
  height: 15px;
  background: linear-gradient(145deg, #654321, #8B4513);
  border-radius: 40px;
  position: absolute;
  top: 15px;
  left: 35px;
  box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
}

.woodfish-bottom {
  width: 60px;
  height: 10px;
  background: linear-gradient(145deg, #654321, #8B4513);
  border-radius: 30px;
  position: absolute;
  bottom: 10px;
  left: 45px;
  box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
}

/* 木鱼棒 */
.woodfish-stick {
  width: 8px;
  height: 80px;
  background: linear-gradient(145deg, #654321, #8B4513);
  position: absolute;
  top: 50%;
  right: -20px;
  transform: translateY(-50%);
  border-radius: 4px;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

.woodfish-stick::before {
  content: '';
  width: 20px;
  height: 6px;
  background: linear-gradient(145deg, #654321, #8B4513);
  position: absolute;
  top: 10px;
  right: -6px;
  border-radius: 3px;
  transform: rotate(45deg);
}

/* 点击提示 */
.click-hint {
  display: block;
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 15px;
  font-weight: 300;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 15px;
  justify-content: center;
  margin-bottom: 30px;
}

.control-btn {
  background: rgba(255, 255, 255, 0.95);
  border: none;
  border-radius: 15px;
  padding: 12px 20px;
  transition: all 0.3s ease;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  color: #333;
  min-width: 100px;
  justify-content: center;
}

.control-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.btn-icon {
  font-size: 1.2rem;
}

.btn-text {
  font-weight: 500;
}

/* 底部 */
.footer {
  margin-top: 30px;
}

.footer text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 0.9rem;
  font-weight: 300;
}

/* 动画效果 */
@keyframes woodfishHit {
  0% { transform: scale(1); }
  50% { transform: scale(0.95); }
  100% { transform: scale(1); }
}

@keyframes meritPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.woodfish-hit {
  animation: woodfishHit 0.15s ease-in-out;
}

.merit-pulse {
  animation: meritPulse 0.2s ease-in-out;
}

/* 响应式设计 */
@media (max-width: 600px) {
  .container {
    padding: 15px;
  }
  
  .title {
    font-size: 2rem;
  }
  
  .woodfish {
    width: 150px;
    height: 150px;
  }
  
  .woodfish-body {
    width: 120px;
    height: 100px;
  }
  
  .merit-number {
    font-size: 2.5rem;
  }
  
  .controls {
    flex-direction: column;
    align-items: center;
  }
  
  .control-btn {
    width: 200px;
  }
} 